{
  "name": "icebreaker-dev-configs",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.28.1",
  "description": "Icebreaker's dev-configs monorepo for shared linting presets",
  "author": "ice breaker <1324318532@qq.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sonofmagic/dev-configs.git"
  },
  "bugs": {
    "url": "https://github.com/sonofmagic/dev-configs/issues"
  },
  "keywords": [
    "dev-configs",
    "eslint",
    "stylelint",
    "commitlint",
    "icebreakers"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "test": "vitest run",
    "test:dev": "vitest",
    "lint": "turbo run lint",
    "publish-packages": "turbo run build lint test && changeset version && changeset publish",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "postinstall": "pnpm run build",
    "commit": "commit",
    "sync": "turbo run sync",
    "inspector": "npx @eslint/config-inspector",
    "build:inspector": "pnpm build && npx @eslint/config-inspector build",
    "script:init": "monorepo init",
    "script:sync": "monorepo sync",
    "script:clean": "monorepo clean",
    "script:mirror": "monorepo mirror",
    "-------": "-----------",
    "release": "changeset",
    "pr": "changeset pre enter alpha",
    "pr:beta": "changeset pre enter beta",
    "pr:rc": "changeset pre enter rc",
    "pr:exit": "changeset pre exit",
    "cv": "changeset version ",
    "--------": "----------------",
    "commitlint": "commitlint --edit"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.3.1",
    "@eslint/config-inspector": "^1.4.2",
    "@eslint/eslintrc": "^3.3.3",
    "@icebreakers/changelog-github": "workspace:*",
    "@icebreakers/commitlint-config": "workspace:*",
    "@icebreakers/eslint-config": "workspace:*",
    "@icebreakers/monorepo": "^3.2.3",
    "@icebreakers/stylelint-config": "workspace:*",
    "@types/eslint-plugin-tailwindcss": "^3.17.0",
    "@types/fs-extra": "^11.0.4",
    "@types/lodash": "^4.17.23",
    "@types/lodash-es": "^4.17.12",
    "@types/micromatch": "^4.0.10",
    "@types/node": "^25.0.9",
    "@types/semver": "^7.7.1",
    "@types/set-value": "^4.0.3",
    "@vitest/coverage-v8": "~4.0.17",
    "ci-info": "^4.3.1",
    "cross-env": "^10.1.0",
    "defu": "^6.1.4",
    "es-toolkit": "^1.44.0",
    "eslint": "^9.39.2",
    "eslint-flat-config-utils": "^3.0.0",
    "execa": "^9.6.1",
    "fast-glob": "^3.3.3",
    "fs-extra": "^11.3.3",
    "get-value": "^4.0.1",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.7",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.22",
    "micromatch": "^4.0.8",
    "only-allow": "^1.2.2",
    "pathe": "^2.0.3",
    "pkg-types": "^2.3.0",
    "prettier": "^3.8.0",
    "rimraf": "^6.1.2",
    "set-value": "^4.1.0",
    "stylelint": "^17.0.0",
    "tsdown": "0.20.0-beta.4",
    "tslib": "^2.8.1",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "turbo": "^2.7.5",
    "type-fest": "^5.4.1",
    "typescript": "^5.9.3",
    "unbuild": "^3.6.1",
    "vitest": "~4.0.17",
    "yaml": "^2.8.2"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}
