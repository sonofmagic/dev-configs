{
  "name": "pnpm-turbo-monorepo-template",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "release": "pnpm -r publish --access public",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@icebreakers/eslint-config-basic": "workspace:*",
    "@icebreakers/eslint-config-ts": "workspace:*",
    "@types/eslint": "^8.4.9",
    "@types/jest": "^29.2.1",
    "eslint": "^8.23.0",
    "jest": "^29.2.2",
    "prettier": "latest",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "turbo": "latest",
    "typescript": "^4.8.2"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@7.14.1"
}