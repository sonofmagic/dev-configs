{
  "name": "eslint-config",
  "version": "1.2.2",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "pnpm -r run dev --parallel",
    "lint": "pnpm -r run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "release": "bumpp -r",
    "test": "pnpm -r run test",
    "sync": "cnpm sync @icebreakers/eslint-config-basic eslint-config-icebreaker @icebreakers/test-utils @icebreakers/eslint-config-ts"
  },
  "devDependencies": {
    "@icebreakers/eslint-config-basic": "workspace:*",
    "@icebreakers/eslint-config-ts": "workspace:*",
    "@types/eslint": "^8.44.6",
    "@types/jest": "^29.5.6",
    "@types/node": "^20.8.7",
    "bumpp": "^9.2.0",
    "changelogen": "^0.5.5",
    "eslint": "^8.51.0",
    "eslint-config-icebreaker": "workspace:*",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@8.6.9"
}
